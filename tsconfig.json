{
  "compilerOptions": {
    "target": "ES2020", // ✅ Enables BigInt support
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["ES2020"], // ✅ Includes BigInt in the standard library
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["src/*"],
      "@/generated/*": ["generated/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
