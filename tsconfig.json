{
  "compilerOptions": {
    "target": "ES2020", // ✅ Enables BigInt support
    "module": "commonjs",
    "lib": ["ES2020"], // ✅ Includes BigInt in the standard library
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".", // <<== move it here inside compilerOptions
    "paths": {
      "@/*": ["src/*"],
       "@/generated/*": ["generated/*"]   
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
